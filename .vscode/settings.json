{
  "files.readonlyInclude": {
    "**/routeTree.gen.ts": true,
    "pnpm-lock.yaml": true,
    "bun.lock": true
  },
  "files.watcherExclude": {
    "**/routeTree.gen.ts": true,
    "pnpm-lock.yaml": true,
    "bun.lock": true
  },
  "search.exclude": {
    "**/routeTree.gen.ts": true,
    "pnpm-lock.yaml": true,
    "bun.lock": true
  },

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    ".prettierrc": ".prettierignore, .prettierrc",
    "app.config.ts": "app.config.ts, components.json, drizzle.config.ts, eslint.config.js, tsconfig.json, .gitignore, .gitattributes, .editorconfig"
  },

  // always choose typescript from node_modules
  "typescript.tsdk": "./node_modules/typescript/lib",

  // use LF line endings
  "files.eol": "\n",

  // set prettier as default formatter for json, ts, tsx, js, jsx, html, css
  "[json][jsonc][typescript][typescriptreact][javascript][javascriptreact][html][css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
